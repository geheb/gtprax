{
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.AspNetCore.Identity": "Error",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "logs/log-.txt",
                "rollingInterval": "Day",
                "rollOnFileSizeLimit": true
              }
            }
          ]
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  },
  "AllowedHosts": "*",
  "MongoConnection": {
    "Host": "localhost",
    "Port": 27017,
    "DatabaseName": "gtprax",
    "UsersCollectionName": "users",
    "EmailQueueCollectionName": "email_queue",
    "WaitingListsCollectionName": "waiting_lists",
    "PatientFilesCollectionName":  "patient_files"
  },
  "SmtpConnection": {
    "Host": "",
    "Port": 25,
    "LoginName": "",
    "LoginPassword": "",
    "SenderEmail": "",
    "SenderName": ""
  },
  "App": {
    "Slogan": "Die Web-App hilft bei der Praxis-Organisation.",
    "HeaderTitle": "GT Prax",
    "Signature": "GT Prax"
  },
  "PageContent": {
    "ImprintFile": "~/html/imprint.html",
    "PrivacyFile": "~/html/privacy.html"
  },
  "Bootstrap": {
    "Admin": {
      "Email": "",
      "Password": ""
    }
  }
}
