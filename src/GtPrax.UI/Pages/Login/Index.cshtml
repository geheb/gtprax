@page
@model GtPrax.UI.Pages.Login.IndexModel
@{
    ViewData["Title"] = "Login";
}

<div class="login-wrapper columns is-gapless">

    <div class="column is-6 is-hidden-mobile">
        <div class="hero is-fullheight login-bg">
        </div>
    </div>

    <div class="column is-6">
        <div class="hero is-fullheight">
            <div class="hero-heading pt-6 px-6">

                <h3 class="title has-text-centered">
                    GT Prax
                </h3>

                <h4 class="subtitle has-text-centered">
                    Um fortzufahren, wird ein gültiges Login benötigt.
                </h4>

                @if (Model.Message is not null)
                {
                    <div class="notification is-success">
                        <button class="delete"></button>
                        @Model.Message
                    </div>
                }

                @if (!ModelState.IsValid)
                {
                    <div class="notification is-danger">
                        <button class="delete"></button>
                        <div asp-validation-summary="All"></div>
                    </div>
                }

            </div>
            <div class="hero-body">

                <div class="column is-three-fifths-fullhd is-offset-one-fifth-fullhd">

                    <div class="box my-3">

                        <figure class="avatar-big has-text-centered mb-5">
                            <span class="fa-stack fa-4x">
                                <i class="fa-solid fa-circle fa-stack-2x"></i>
                                <i class="fa-solid @Html.RandomFontawesomeFace() fa-stack-1x fa-inverse"></i>
                            </span>
                        </figure>

                        <form method="post">
                            <fieldset disabled="@Model.IsDisabled">
                                <input class="input emedih" type="text" asp-for="UserNameBot" />
                                <div class="field">
                                    <div class="control mr-5">
                                        <input class="input is-large" type="email" placeholder="Deine E-Mail-Adresse" autofocus="" asp-for="Email">
                                    </div>
                                    <span asp-validation-for="Email"></span>
                                </div>
                                <div class="field">
                                    <div class="control mr-5">
                                        <input class="input is-large" type="password" placeholder="Dein Passwort" asp-for="Password">
                                        <span class="icon toggle-eye mt-2">
                                            <i class="fas fa-eye"></i>
                                        </span>
                                    </div>
                                    <span asp-validation-for="Password"></span>
                                </div>
                                <button class="button is-block is-info is-large is-fullwidth" type="submit">Login <i class="fas fa-sign-in-alt" aria-hidden="true"></i></button>
                            </fieldset>
                        </form>

                    </div>

                    <p class="has-text-grey has-text-centered">
                        <a href="/Login/ResetPassword">Passwort zurücksetzen</a> &nbsp;·&nbsp;
                        <a href="/Privacy">Datenschutz</a> &nbsp;·&nbsp;
                        <a href="/">Startseite</a>
                    </p>
                </div>

            </div>
        </div>
    </div>

</div>
