@page
@model GtPrax.UI.Pages.Login.ConfirmEmailModel
@{
    ViewData["Title"] = "E-Mail-Adresse bestätigen";
}

<div class="login-wrapper columns is-gapless">

    <div class="column is-6 is-hidden-mobile">
        <div class="hero is-fullheight login-bg">
        </div>
    </div>

    <div class="column is-6">
        <div class="hero is-fullheight">
            <div class="hero-heading pt-6 px-6">

                <h3 class="title has-text-centered">
                    GT Prax
                </h3>

                <h4 class="subtitle has-text-centered">
                    Um die Kontoeinrichtung abzuschliessen, muss ein Passwort gesetzt werden.
                    Dieses muss aus mindestens 10 Zeichen bestehen. Beachte dabei Klein-/Großbuchstaben, Zahlen, Sonderzeichen
                    und mindestens 5 eindeutige Zeichen.
                </h4>

                @if (!ModelState.IsValid)
                {
                    <div class="notification is-danger">
                        <button class="delete"></button>
                        <div asp-validation-summary="All"></div>
                    </div>
                }

            </div>
            <div class="hero-body">

                <div class="column is-three-fifths-fullhd is-offset-one-fifth-fullhd">

                    <div class="box my-3">

                        <figure class="avatar-big has-text-centered mb-5">
                            <span class="fa-stack fa-4x">
                                <i class="fa-solid fa-circle fa-stack-2x"></i>
                                <i class="fa-solid @Html.RandomFontawesomeFace() fa-stack-1x fa-inverse"></i>
                            </span>
                        </figure>

                        <form method="post">
                            <fieldset disabled="@Model.IsDisabled">
                                <input class="input emedih" type="text" asp-for="UserNameBot" />

                                <div class="field">
                                    <div class="control mr-5">
                                        <input class="input is-large" type="password" placeholder="Passwort" asp-for="Password" />
                                        <span class="icon toggle-eye mt-2">
                                            <i class="fas fa-eye"></i>
                                        </span>
                                    </div>
                                    <span asp-validation-for="Password"></span>
                                </div>
                                <div class="field">
                                    <div class="control mr-5">
                                        <input class="input is-large" type="password" placeholder="Passwort wiederholen" asp-for="RepeatPassword" />
                                        <span class="icon toggle-eye mt-2">
                                            <i class="fas fa-eye"></i>
                                        </span>
                                    </div>
                                    <span asp-validation-for="RepeatPassword"></span>
                                </div>

                                <button class="button is-block is-info is-large is-fullwidth" type="submit">Speichern <i class="fas fa-lock" aria-hidden="true"></i></button>
                            </fieldset>
                        </form>

                    </div>

                    <p class="has-text-grey has-text-centered">
                        <a href="/Privacy">Datenschutz</a> &nbsp;·&nbsp;
                        <a href="/">Startseite</a>
                    </p>
                </div>

            </div>
        </div>
    </div>

</div>
