@page "/WaitingLists/{id}/Patients/Add"
@model GtPrax.UI.Pages.WaitingLists.AddPatientModel
@{
    ViewData["Title"] = Model.GetNode().Title;
    ViewData["HasFooter"] = true;
    Model.BuildHeaderMenu(new { id = Model.Id });
}

@await Html.PartialAsync("_Header")

<section class="section">
    <div class="container">

        @Html.CreateBreadcrumb(new { id = Model.Id }, new { id = Model.Id })

        @if (!ModelState.IsValid)
        {
            <div class="notification is-danger">
                <button class="delete"></button>
                <div class="validation-summary-errors" data-valmsg-summary="true">
                    <ul>
                        @foreach (var error in ModelState.SelectMany(x => x.Value!.Errors))
                        {
                            <li>@Html.Raw(error.ErrorMessage)</li>
                        }
                    </ul>
                </div>
            </div>
        }

        <h2 class="subtitle">@Model.Details</h2>

        <div class="columns">
            <div class="column is-half">

                <form method="post">
                    <div class="field">
                        <label class="label" asp-for="Input.Name"></label>
                        <div class="control">
                            <input class="input" type="text" asp-for="Input.Name" autofocus />
                        </div>
                        <span asp-validation-for="Input.Name"></span>
                    </div>
                    <div class="field">
                        <label class="label" asp-for="Input.Birthday"></label>
                        <div class="control">
                            <input class="input" type="date" asp-for="Input.Birthday" />
                        </div>
                        <span asp-validation-for="Input.Birthday"></span>
                    </div>
                    <div class="field">
                        <label class="label" asp-for="Input.PhoneNumber"></label>
                        <div class="control">
                            <input class="input" type="tel" asp-for="Input.PhoneNumber" />
                        </div>
                        <span asp-validation-for="Input.PhoneNumber"></span>
                    </div>
                    <div class="field">
                        <label class="label" asp-for="Input.Reason"></label>
                        <div class="control">
                            <input class="input" type="text" asp-for="Input.Reason" />
                        </div>
                        <span asp-validation-for="Input.Reason"></span>
                    </div>
                    <div class="field">
                        <label class="label" asp-for="Input.Doctor"></label>
                        <div class="control">
                            <input class="input" type="text" asp-for="Input.Doctor" />
                        </div>
                        <span asp-validation-for="Input.Doctor"></span>
                    </div>
                    <div class="field">
                        <label class="label" asp-for="Input.TherapyTimes"></label>
                    </div>

                    <div class="field is-horizontal">
                        <div class="field-label">
                            <label class="label">Montag</label>
                        </div>
                        <div class="field-body">
                            <div class="field">
                                <div class="control mt-1">
                                    <label class="checkbox"><input type="checkbox" asp-for="Input.TherapyTimes.Monday.IsMorning" /> Vormittag</label>
                                </div>
                            </div>
                            <div class="field">
                                <div class="control mt-1">
                                    <label class="checkbox"><input type="checkbox" asp-for="Input.TherapyTimes.Monday.IsAfternoon" /> Nachmittag</label>
                                </div>
                            </div>
                            <div class="field">
                                <div class="control mt-1">
                                    <label class="checkbox"><input type="checkbox" asp-for="Input.TherapyTimes.Monday.IsHomeVisit" /> Hausbesuch</label>
                                </div>
                            </div>
                            <div class="field">
                                <div class="control">
                                    <input class="input" type="time" asp-for="Input.TherapyTimes.Monday.AvailableFrom" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="field is-horizontal">
                        <div class="field-label">
                            <label class="label">Dienstag</label>
                        </div>
                        <div class="field-body">
                            <div class="field">
                                <div class="control mt-1">
                                    <label class="checkbox"><input type="checkbox" asp-for="Input.TherapyTimes.Tuesday.IsMorning" /> Vormittag</label>
                                </div>
                            </div>
                            <div class="field">
                                <div class="control mt-1">
                                    <label class="checkbox"><input type="checkbox" asp-for="Input.TherapyTimes.Tuesday.IsAfternoon" /> Nachmittag</label>
                                </div>
                            </div>
                            <div class="field">
                                <div class="control mt-1">
                                    <label class="checkbox"><input type="checkbox" asp-for="Input.TherapyTimes.Tuesday.IsHomeVisit" /> Hausbesuch</label>
                                </div>
                            </div>
                            <div class="field">
                                <div class="control">
                                    <input class="input" type="time" asp-for="Input.TherapyTimes.Tuesday.AvailableFrom" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="field is-horizontal">
                        <div class="field-label">
                            <label class="label">Mittwoch</label>
                        </div>
                        <div class="field-body">
                            <div class="field">
                                <div class="control mt-1">
                                    <label class="checkbox"><input type="checkbox" asp-for="Input.TherapyTimes.Wednesday.IsMorning" /> Vormittag</label>
                                </div>
                            </div>
                            <div class="field">
                                <div class="control mt-1">
                                    <label class="checkbox"><input type="checkbox" asp-for="Input.TherapyTimes.Wednesday.IsAfternoon" /> Nachmittag</label>
                                </div>
                            </div>
                            <div class="field">
                                <div class="control mt-1">
                                    <label class="checkbox"><input type="checkbox" asp-for="Input.TherapyTimes.Wednesday.IsHomeVisit" /> Hausbesuch</label>
                                </div>
                            </div>
                            <div class="field">
                                <div class="control">
                                    <input class="input" type="time" asp-for="Input.TherapyTimes.Wednesday.AvailableFrom" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="field is-horizontal">
                        <div class="field-label">
                            <label class="label">Donnerstag</label>
                        </div>
                        <div class="field-body">
                            <div class="field">
                                <div class="control mt-1">
                                    <label class="checkbox"><input type="checkbox" asp-for="Input.TherapyTimes.Thursday.IsMorning" /> Vormittag</label>
                                </div>
                            </div>
                            <div class="field">
                                <div class="control mt-1">
                                    <label class="checkbox"><input type="checkbox" asp-for="Input.TherapyTimes.Thursday.IsAfternoon" /> Nachmittag</label>
                                </div>
                            </div>
                            <div class="field">
                                <div class="control mt-1">
                                    <label class="checkbox"><input type="checkbox" asp-for="Input.TherapyTimes.Thursday.IsHomeVisit" /> Hausbesuch</label>
                                </div>
                            </div>
                            <div class="field">
                                <div class="control">
                                    <input class="input" type="time" asp-for="Input.TherapyTimes.Thursday.AvailableFrom" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="field is-horizontal">
                        <div class="field-label">
                            <label class="label">Freitag</label>
                        </div>
                        <div class="field-body">
                            <div class="field">
                                <div class="control mt-1">
                                    <label class="checkbox"><input type="checkbox" asp-for="Input.TherapyTimes.Friday.IsMorning" /> Vormittag</label>
                                </div>
                            </div>
                            <div class="field">
                                <div class="control mt-1">
                                    <label class="checkbox"><input type="checkbox" asp-for="Input.TherapyTimes.Friday.IsAfternoon" /> Nachmittag</label>
                                </div>
                            </div>
                            <div class="field">
                                <div class="control mt-1">
                                    <label class="checkbox"><input type="checkbox" asp-for="Input.TherapyTimes.Friday.IsHomeVisit" /> Hausbesuch</label>
                                </div>
                            </div>
                            <div class="field">
                                <div class="control">
                                    <input class="input" type="time" asp-for="Input.TherapyTimes.Friday.AvailableFrom" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="field">
                        <label class="label">Markierungen</label>
                    </div>
                    <div class="field is-grouped">
                        <div class="control mt-1">
                            <label class="checkbox"><input type="checkbox" asp-for="Input.IsPriorityTag" /> @Html.DisplayNameFor(m => m.Input.IsPriorityTag)</label>
                        </div>
                        <div class="control mt-1">
                            <label class="checkbox"><input type="checkbox" asp-for="Input.IsJumperTag" /> @Html.DisplayNameFor(m => m.Input.IsJumperTag)</label>
                        </div>
                        <div class="control mt-1">
                            <label class="checkbox"><input type="checkbox" asp-for="Input.IsNeurofeedbackTag" /> @Html.DisplayNameFor(m => m.Input.IsNeurofeedbackTag)</label>
                        </div>
                    </div>

                    <div class="field">
                        <label class="label" asp-for="Input.Remark"></label>
                        <div class="control">
                            <textarea class="textarea" rows="7" asp-for="Input.Remark"></textarea>
                        </div>
                        <span asp-validation-for="Input.Remark"></span>
                    </div>

                    <button class="button is-primary" type="submit">Hinzufügen</button>
                </form>


            </div>
        </div>

    </div>
</section>

@await Html.PartialAsync("_Footer")
