@page "/Error/{code:int}"
@model ErrorModel
@{
    ViewData["Title"] = "Fehler";
    ViewData["HasFooter"] = true;
}

@await Html.PartialAsync("_Header")

<section class="section">
    <div class="container">

        <h3 class="title is-3">@ViewData["Title"]</h3>
        <h4 class="subtitle is-4">Bei der Anfrage ist ein Fehler aufgetreten.</h4>

        <p><strong>Code: @Model.Code</strong></p>
        <p><strong>Beschreibung: @Model.Description</strong></p>
    </div>
</section>

@await Html.PartialAsync("_Footer")
