[Unit]
Description=GT Prax

[Service]
WorkingDirectory=/opt/gtprax/
ExecStart=/opt/gtprax/GtPrax.WebApp --urls http://localhost:5003
Restart=always
RestartSec=60
KillSignal=SIGINT
SyslogIdentifier=gtprax
User=gtprax
Environment=ASPNETCORE_ENVIRONMENT=Production
Environment=DOTNET_PRINT_TELEMETRY_MESSAGE=false
Environment=DOTNET_CLI_TELEMETRY_OPTOUT=1

[Install]
WantedBy=multi-user.target
